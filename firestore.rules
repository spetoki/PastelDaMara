rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra pública para permitir acesso durante o desenvolvimento
    // ATENÇÃO: Isso permite que qualquer pessoa leia e escreva no seu banco de dados.
    // Para produção, você DEVE implementar regras de segurança.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
