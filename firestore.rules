rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public access to products
    match /products/{productId} {
      allow read, write: if true;
    }

    // Allow public access to combos
    match /combos/{comboId} {
      allow read, write: if true;
    }

    // Allow public access to sales
    match /sales/{saleId} {
      allow read, write: if true;
    }

    // Allow public access to expenses
    match /expenses/{expenseId} {
      allow read, write: if true;
    }

    // Allow public access to app state documents
    match /appState/{document} {
      allow read, write: if true;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
